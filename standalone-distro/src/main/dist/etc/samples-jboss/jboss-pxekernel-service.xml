<!-- 
	A JBoss sar for deployment of the ode kernel mbean.  This is
	an alternative to the jboss-ode-service.xml.
	
	The ode kernel is responsible for locating the ODE kernel configuration
	e.g. boss-odekernel-config.xml.
	
	This service has a dependency on the ode datasource: 
	see jboss-odehsqldb-ds.xml.
-->
<server>
    <classpath codebase="file:/${ode.home}/bin" archives="kernel-boot.jar"/>
    
    <!--
     Requires that 'ode.home' is set as a system property
     or replace the ${ode.home} below with the path to the ODE 
     installation.
    -->
    <mbean code="org.apache.ode.kernel.OdeKernel"
           name="com.fivesight.ode:type=Kernel">
        <depends>jboss.jca:service=DataSourceBinding,name=odeDS</depends>   
        <attribute name="ConfigURL">file:${ode.home}/etc/samples-jboss/jboss-ode-config.xml</attribute>
    </mbean>
   
</server>    