<!--
     jbi.xml for ODE BPEL Engine
  -->
<jbi
  version="1.0"
  xmlns="http://java.sun.com/xml/ns/jbi"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/jbi ./jbi.xsd">

  <!-- identification information about this engine -->
  <component
    type="service-engine"
    component-class-loader-delegation="self-first">

    <identification>
      <name>OdeBpelEngine</name>
      <description> This is the ODE BPEL engine, adapter for JBI..
      </description>
    </identification>

    <component-class-name description="Component Implementation" >org.apache.ode.jbi.OdeComponent</component-class-name>
    <component-class-path>
        <path-element>lib/ode-utils.jar</path-element>
        <path-element>lib/ode-bpel-bom.jar</path-element>
        <path-element>lib/ode-bpel-api.jar</path-element>
        <path-element>lib/ode-bpel-compiler.jar</path-element>
        <path-element>lib/ode-bpel-el-xpath10.jar</path-element>
        <path-element>lib/ode-bpel-el-xpath20.jar</path-element>
        <path-element>lib/ode-bpel-obj.jar</path-element>
        <path-element>lib/ode-bpel-dd.jar</path-element>
        <path-element>lib/ode-bpel-parser.jar</path-element>
        <path-element>lib/ode-bpel-runtime.jar</path-element>
        <path-element>lib/ode-bpel-scheduler-quartz.jar</path-element>
        <path-element>lib/ode-jca-server.jar</path-element>
        <path-element>lib/ode-jca-ra.jar</path-element>
        <path-element>lib/ode-dao-hibernate.jar</path-element>
        <path-element>lib/ode-jacob.jar</path-element>
        <path-element>lib/ode-jbi.jar</path-element>
        <path-element>lib/ode-minerva.jar</path-element>

        <path-element>lib/commons-pool.jar</path-element>
        <path-element>lib/ehcache.jar</path-element>
        <path-element>lib/jaxen.jar</path-element>
        <path-element>lib/saxon.jar</path-element> 
        <path-element>lib/saxon-dom.jar</path-element> 
        <path-element>lib/dom4j.jar</path-element>
        <path-element>lib/hibernate.jar</path-element>
        <path-element>lib/commons-collections.jar</path-element>
        <!-- <path-element>lib/commons-logging.jar</path-element> -->
        <!-- <path-element>lib/derby.jar</path-element> -->
        <path-element>lib/commons-lang.jar</path-element>
        <path-element>lib/wsdl4j.jar</path-element>
        <path-element>lib/stax-api.jar</path-element>
        <path-element>lib/xbean.jar</path-element>
        <path-element>lib/cglib.jar</path-element>
        <path-element>lib/asm.jar</path-element>
        <path-element>lib/antlr.jar</path-element>
        <path-element>lib/quartz.jar</path-element>
        <path-element>lib/geronimo-j2ee-connector_1.5_spec.jar</path-element>

    </component-class-path>
    <bootstrap-class-name>org.apache.ode.jbi.OdeBootstrap</bootstrap-class-name>
    <bootstrap-class-path>
        <path-element>lib/ode-jbi.jar</path-element>
    </bootstrap-class-path>
  </component>
</jbi>
