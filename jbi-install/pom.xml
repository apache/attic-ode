<?xml version="1.0"?>
<project>
    <groupId>ode</groupId>
    <artifactId>ode-jbi-install</artifactId>
    <name>ODE :: JBI Component Installer</name>

    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>ode</groupId>
        <artifactId>ode</artifactId>
        <version>2.0-SNAPSHOT</version>
    </parent>
    <version>2.0-SNAPSHOT</version>
    <dependencies>
        <dependency>
            <groupId>ode</groupId>
            <artifactId>ode-dao-hibernate</artifactId>
        </dependency>
        <dependency>
            <scope>compile</scope>
            <groupId>ode</groupId>
            <artifactId>ode-dao-hibernate-db-derby</artifactId>
            <type>tar</type>
        </dependency>
        <dependency>
            <groupId>ode</groupId>
            <artifactId>ode-jbi</artifactId>
        </dependency>
        <dependency>
            <groupId>ode</groupId>
            <artifactId>ode-bpel-runtime</artifactId>
        </dependency>
        <dependency>
            <groupId>ode</groupId>
            <artifactId>ode-bpel-scheduler-quartz</artifactId>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>install</phase>
                        <goals>
                            <goal>attached</goal>
                        </goals>
                        <configuration>
                            <descriptors>
                                <descriptor>assembly.xml</descriptor>
                            </descriptors>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
