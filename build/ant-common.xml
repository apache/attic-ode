<?xml version="1.0" encoding="UTF-8"?>

<project name="ant-common">
  
  <!-- Location of the build system. -->
  <property name="buildsys.dir" location="${basedir}/../build"/>
  <property name="ant.home" location="${buildsys.dir}/ant-1.6"/>
  <property name="ant.lib.dir" location="${ant.home}/lib"/>
  <property name="antlib.dir" location="${buildsys.dir}/antlib"/>
  <property name="ant.jar.path" location="${ant.lib.dir}/ant.jar"/>
  <property name="name" value="${ant.project.name}"/>
  
  <!-- Local build.properties overrides global properties -->
  <property file="${user.home}/build.properties"/>
  <property file="${basedir}/build.properties"/>
  <property file="${buildsys.dir}/build.properties"/>
  
  <!-- xs3p Schema documenter information -->
  <property name="xs3p.dir" location="${buildsys.dir}/xs3p-1.1.3"/>
  <property name="xs3p.xslt" location="${xs3p.dir}/xs3p.xsl"/>
  

  <!-- ================================================================== -->
  
  <path id="antlib-cpath">
    <fileset dir="${antlib.dir}" includes="*.jar"/>
  </path>
  
  <!-- ========================================================= -->
  <!--                  Define Custom ANT Task                   -->
  <!-- ========================================================= -->
  <!-- include ant-contrib as available tasks  (e.g. foreach) -->
  <taskdef resource="net/sf/antcontrib/antcontrib.properties"
           classpathref="antlib-cpath" />
  
  
  </target>
  
  <!-- ============================================================= -->
  <!-- ============================================================= -->
  <!-- ============================================================= -->
  <!-- ===============  UTILITY TAGETS FOLLOW   ==================== -->
  <!-- ============================================================= -->
  <!-- ============================================================= -->
  <!-- ============================================================= -->

</project>
