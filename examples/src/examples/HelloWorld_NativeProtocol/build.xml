<project name="HelloWorld_NativeProtocol" default="sar"  >

  <import file="../example-build.xml" />

  <target name="compile" depends="init" description="Compile the example Native Protocol Adapter invoker." >
    <mkdir dir="${build.dir}/classes" />
    <javac srcdir="java"
      destdir="${build.dir}/classes"
      source="1.5"
      classpathref="cpath.ode" />
  </target>

  <target name="test" depends="compile" description="Invoke the native invoker." >
    <echo message="ode.url=${ode.url}"/>
    <java fork="true" classname="HelloWorldNativeClient" >
      <classpath>
        <pathelement location="${build.dir}/classes" />
        <path refid="cpath.ode" />
      </classpath>
      <jvmarg value="-Dode.url=${ode.url}"/>
    </java>
  </target>
</project>
