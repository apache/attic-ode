<project name="HelloXslWorld" default="sar"  >

  <import file="../example-build.xml" />

  <property name="xslfilename" value="${ant.project.name}.xsl"/>

  <target name="_rr" depends="init">
    <delete dir="${rrfile}" />
    <mkdir dir="${rrfile}" />
    <ode-rr rrdir="${rrfile}">
      <rrfileset dir="." includes="${wsdlfilename}" desturi="urn:/" recursive="yes" />
      <rrfileset dir="." includes="${xslfilename}" desturi="urn:/" recursive="yes" />
    </ode-rr>
  </target>

</project>
