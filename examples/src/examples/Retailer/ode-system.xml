<system-descriptor xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.fivesight.com/ode/system-descriptor/ http://www.fivesight.com/ode/system-descriptor/"
  xmlns:hw="http://ode/bpel/unit-test.wsdl"
  xmlns:retail="http://www.ws-i.org/SampleApplications/SupplyChainManagement/2002-08/Retailer.wsdl"
  xmlns="http://www.fivesight.com/ode/system-descriptor/" name="Retailer" wsdlUri="file:src/bpel/Retailer/RetailAggregator.wsdl">
  <channels>
    <channel name="c1"/>
    <channel name="c2"/>
  </channels>
  <services>
    <service name="AggregatorService" provider="uri:protocoladapter.soap">
      <imports>
        <port name="AggregatorPort" type="hw:AggregatorPortType" channel-ref="c1"/>
      </imports>
    </service>
    <service name="RetailerServiceImplementation" provider="uri:protocoladapter.soap.outbound">
      <properties>
        <property name="serviceWsdlName" value="RetailerServiceImplementation"/>
        <property name="serviceWsdlNamespace" value="http://www.ws-i.org/SampleApplications/SupplyChainManagement/2002-08/Retailer.wsdl"/>
      </properties>
      <exports>
        <port name="RetailerServiceImplementationPort"
          type="retail:RetailerPortType" channel-ref="c2"/>
      </exports>
    </service>
    <service name="retailAggregator.BpelService" provider="uri:bpelProvider">
      <imports>
        <port name="retailerPartnerLink.RetailerPortTypeProvider"
          type="retail:RetailerPortType" channel-ref="c2"/>
      </imports>
      <exports>
        <port name="aggregatorPartnerLink.me" type="hw:AggregatorPortType" channel-ref="c1"/>
      </exports>
    </service>
  </services>
</system-descriptor>
