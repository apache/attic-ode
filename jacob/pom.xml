<project>
    <groupId>org.apache.ode</groupId>
    <artifactId>ode-jacob</artifactId>
    <name>ODE :: Java Concurrent Objects (JACOB)</name>

    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.apache.ode</groupId>
        <artifactId>ode</artifactId>
        <version>2.0-SNAPSHOT</version>
    </parent>
    <version>2.0-SNAPSHOT</version>
    <dependencies>
        <dependency>
            <groupId>org.apache.ode</groupId>
            <artifactId>ode-utils</artifactId>
        </dependency>
        <dependency>
            <groupId>org.apache.ode</groupId>
            <artifactId>ode-jacob-ap</artifactId>
        </dependency>
        <dependency>
           <groupId>xstream</groupId>  
           <artifactId>xstream</artifactId>
        </dependency>

    </dependencies>
    <build>
        <plugins>
            <!-- A bit of maven2 lunacy: add an extra source directory to 
                 the compile path; simple eh? -->
<plugin>
  <groupId>org.apache.myfaces.tobago</groupId>
  <artifactId>maven-apt-plugin</artifactId>
  <version>1.0.8</version>
  <executions>
    <execution>
      <phase>generate-sources</phase>
      <configuration>
        <generated>target/generated-sources/apt</generated>
		<nocompile>true</nocompile>
		<fork>true</fork>
        <target>1.5</target>
      </configuration>
      <goals>
        <goal>execute</goal>
      </goals>
    </execution>
  </executions>
</plugin>

        </plugins>
    </build>
</project>
