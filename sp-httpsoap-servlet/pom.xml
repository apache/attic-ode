<?xml version="1.0"?>
<project>
    <artifactId>pxe-sp-httpsoap-servlet</artifactId>
    <name>PXE :: HTTP/SOAP Service Provider Servlet</name>
    <description>  Servlet-side of the HTTP/SOAP Service Provider.</description>  
    
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>pxe</groupId>
        <artifactId>pxe</artifactId>
        <version>2.0-SNAPSHOT</version>
    </parent>
    <version>2.0-SNAPSHOT</version>
    <packaging>war</packaging>
  <dependencies>
    <dependency>
      <groupId>pxe</groupId>
      <artifactId>pxe-sp-httpsoap</artifactId>
    </dependency>
    <dependency>
      <groupId>pxe</groupId>
      <artifactId>pxe-jca-ra</artifactId>
    </dependency>
    <dependency>
      <groupId>pxe</groupId>
      <artifactId>pxe-sfwk-core</artifactId>
    </dependency>
    <dependency>
      <groupId>pxe</groupId>
      <artifactId>pxe-sfwk-impl</artifactId>
    </dependency>
    <dependency>
      <groupId>pxe</groupId>
      <artifactId>pxe-soap</artifactId>
    </dependency>
    <dependency>
      <groupId>pxe</groupId>
      <artifactId>pxe-utils</artifactId>
    </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <configuration>
                    <webXml>${basedir}/target/classes/web.xml</webXml>
                    <archive>
                        <index>true</index>
                        <!--manifestEntries>
                            <FiveSight-Product>FiveSight PXE</FiveSight-Product>
                            <FiveSight-SubComponent>HTTP Servlet Adapter</FiveSight-SubComponent>
                            <FiveSight-Vendor>${vendor.name}</FiveSight-Vendor>
                            <FiveSight-Copyright>${vendor.copyright}</FiveSight-Copyright>
                            <FiveSight-BuildModule>${project.name}</FiveSight-BuildModule>
                        </manifestEntries-->
                    </archive>
                </configuration>
            </plugin>
        </plugins>
        <resources>
            <resource>
                <directory>etc</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
    </build>
    <properties>
        <pxe.rmi.port>2099</pxe.rmi.port>
        <pxe.rmi.domain>pxe</pxe.rmi.domain>
    </properties>
</project>
