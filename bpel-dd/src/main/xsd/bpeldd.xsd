<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           targetNamespace="http://ode.fivesight.com/schemas/2006/02/14/bpeldd"
           xmlns:dd="http://ode.fivesight.com/schemas/2006/02/14/bpeldd"
           elementFormDefault="qualified">

  <xs:element name="deployment-descriptor" id="deployment-descriptor" type="dd:tDeployment-descriptor"/>

  <xs:complexType name="tDeployment-descriptor">
    <xs:sequence>
		
			<xs:element name="compiled-process-location" type="xs:string"
				minOccurs="0" maxOccurs="1">
				<xs:annotation>
					<xs:documentation> Location of the compiled process.
						</xs:documentation>
				</xs:annotation>
			</xs:element>
			
			<xs:element name="active" minOccurs="0" maxOccurs="1" type="xs:boolean"
				default="false">
				<xs:annotation>
					<xs:documentation> Active flag, if set process will be activated once
						deployed. </xs:documentation>
				</xs:annotation>
			</xs:element>
			
			<xs:element name="retired" minOccurs="0" maxOccurs="1" type="xs:boolean"
				default="false">
				<xs:annotation>
					<xs:documentation> Retired flag, if set process will be retired once
						deployed. </xs:documentation>
				</xs:annotation>
			</xs:element>
			
      <xs:element name="process-persistent"  minOccurs="0" maxOccurs="1" type="xs:boolean"/>

      <xs:element name="process-events" minOccurs="0" maxOccurs="1">
        <xs:annotation>
          <xs:documentation>
            Defines which events should be generated by ODE (process-level).
          </xs:documentation>
        </xs:annotation>
        <xs:complexType>
          <xs:sequence>
            <xs:element name="enable-event" minOccurs="0" maxOccurs="unbounded" type="dd:tSpecificEvents"/>
            <xs:element name="scope-events" minOccurs="0" maxOccurs="unbounded">
              <xs:annotation>
                <xs:documentation>
                  Defines which events should be generated by ODE (scope-level).
                </xs:documentation>
              </xs:annotation>
              <xs:complexType>
                <xs:sequence>
                  <xs:element name="enable-event" minOccurs="0" maxOccurs="unbounded" type="dd:tSpecificEvents"/>
                </xs:sequence>
                <xs:attribute name="name" type="xs:NCName" use="required">
                  <xs:annotation>
                    <xs:documentation>Scope name.</xs:documentation>
                  </xs:annotation>
                </xs:attribute>
                <xs:attribute name="generate" type="dd:tGlobalEvents" use="optional">
                  <xs:annotation>
                    <xs:documentation>Global attribute for all|none events.</xs:documentation>
                  </xs:annotation>
                </xs:attribute>
              </xs:complexType>
            </xs:element>
          </xs:sequence>
          <xs:attribute name="generate" type="dd:tGlobalEvents" use="optional">
            <xs:annotation>
              <xs:documentation>Global attribute for all|none events.</xs:documentation>
            </xs:annotation>
          </xs:attribute>
        </xs:complexType>
      </xs:element>

      <xs:element name="process-properties"  minOccurs="0" maxOccurs="1">
        <xs:complexType>
          <xs:sequence>
            <xs:element name="property"  minOccurs="1" maxOccurs="unbounded">
              <xs:annotation>
                <xs:documentation>
                  A user-defined property that will be attached to a process upon
                  deployment.
                </xs:documentation>
              </xs:annotation>
              <xs:complexType>
                <xs:sequence>
                  <xs:any namespace="##other" minOccurs="0" maxOccurs="unbounded" processContents="lax"/>
                </xs:sequence>
                <xs:attribute name="name" type="xs:string" use="required">
                  <xs:annotation>
                    <xs:documentation>Name of the property.</xs:documentation>
                  </xs:annotation>
                </xs:attribute>
                <xs:attribute name="namespace" type="xs:anyURI" use="required">
                  <xs:annotation>
                    <xs:documentation>Namespace of the property.</xs:documentation>
                  </xs:annotation>
                </xs:attribute>
              </xs:complexType>
            </xs:element>
          </xs:sequence>
        </xs:complexType>
      </xs:element>

      <xs:element name="endpoint-refs"  minOccurs="0" maxOccurs="1">
        <xs:complexType>
          <xs:sequence>
            <xs:element name="endpoint-ref" minOccurs="1" maxOccurs="unbounded">
              <xs:annotation>
                <xs:documentation>
                  Specification of an endpoint reference that will be associated
                  with a partner link partnerRole.
                </xs:documentation>
              </xs:annotation>
              <xs:complexType>
                <xs:sequence>
                  <xs:any namespace="##other" minOccurs="0" maxOccurs="unbounded" processContents="lax"/>
                </xs:sequence>
                <xs:attribute name="partnerLinkName" type="xs:string" use="required">
                  <xs:annotation>
                    <xs:documentation>Name of the property.</xs:documentation>
                  </xs:annotation>
                </xs:attribute>
                <xs:attribute name="partnerLinkRole" type="dd:tRoles" use="optional" default="partnerRole">
                  <xs:annotation>
                    <xs:documentation>Namespace of the property.</xs:documentation>
                  </xs:annotation>
                </xs:attribute> 
				<xs:attribute name="serviceName" type="xs:QName" use="optional">
                  <xs:annotation>
                    <xs:documentation>Name of the service that this refers to.</xs:documentation>
                  </xs:annotation>
                </xs:attribute>
              </xs:complexType>
            </xs:element>
          </xs:sequence>
        </xs:complexType>
      </xs:element>

    </xs:sequence>
  </xs:complexType>

  <xs:simpleType name="tRoles">
    <xs:restriction base="xs:string">
      <xs:enumeration value="myRole"/>
      <xs:enumeration value="partnerRole"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="tGlobalEvents">
    <xs:restriction base="xs:string">
      <xs:enumeration value="all"/>
      <xs:enumeration value="none"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="tSpecificEvents">
    <xs:restriction base="xs:string">
      <xs:enumeration value="dataHandling"/>
      <xs:enumeration value="activityLifecycle"/>
      <xs:enumeration value="instanceLifecycle"/>
      <xs:enumeration value="correlation"/>
      <xs:enumeration value="scopeHandling"/>
    </xs:restriction>
  </xs:simpleType>

</xs:schema>
